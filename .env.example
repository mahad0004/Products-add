# Flask Configuration
FLASK_DEBUG=False
PORT=5000
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Apify Configuration (REQUIRED)
APIFY_API_TOKEN=your_apify_token_here

# Shopify Configuration (REQUIRED)
SHOPIFY_SHOP_URL=https://your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here

# OpenAI Configuration (REQUIRED for AI enhancement)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration (REQUIRED for AI image editing)
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Database Configuration (Optional - defaults to SQLite)
# For Railway, PostgreSQL will be auto-provided
# DATABASE_URL=sqlite:///shopify_automation.db

# Parallel Processing Configuration (Optional)
PARALLEL_WORKERS=2  # Number of parallel workers for Pro Mode (default: 2)

# Rate Limiting Configuration (Optional - adjust if hitting API limits)
GEMINI_DELAY=1.0    # Delay after Gemini calls in seconds (default: 1.0)
OPENAI_DELAY=0.5    # Delay after OpenAI calls in seconds (default: 0.5)
SHOPIFY_DELAY=0.6   # Delay after Shopify calls in seconds (default: 0.6)

# Logging
LOG_LEVEL=INFO

# ==================== RAILWAY DEPLOYMENT ====================
# For Railway deployment:
# 1. Set PORT to ${{PORT}} (Railway provides this automatically)
# 2. Set DATABASE_URL if using PostgreSQL (Railway provides this automatically)
# 3. Set all API keys in Railway environment variables
# 4. Set FLASK_DEBUG=False for production
